{
  "name": "4-Day Push/Pull/Legs/Hybrid Split",
  "days": [
    {
      "day": "Day 1 – Push (Chest + Shoulders + Triceps)",
      "emphasis": "Strength & hypertrophy",
      "exercises": [
        "barbell-bench-press",
        "incline-bench-press",
        "shoulder-press",
        "lateral-raises",
        "cable-tricep-pushdown",
        "overhead-tricep-extension"
      ],
      "sets": "3×8–12 each"
    },
    {
      "day": "Day 2 – Pull (Back + Biceps + Core)",
      "emphasis": "Pulling power + arms",
      "exercises": [
        "single-arm-row",
        "seated-cable-row",
        "face-pull",
        "dumbbell-curl",
        "hammer-curl",
        "cable-crunch"
      ],
      "sets": "3×8–12 each"
    },
    {
      "day": "Day 3 – Legs + Core (Light Upper Body Touch)",
      "emphasis": "Balanced",
      "exercises": [
        "goblet-squat",
        "bulgarian-split-squat",
        "romanian-deadlift",
        "standing-calf-raises",
        "hanging-knee-raise",
        "push-ups"
      ],
      "sets": "3×10–15",
      "notes": "Optional upper touch: Push-ups or Dips"
    },
    {
      "day": "Day 4 – Push + Pull Hybrid (Chest/Shoulders/Arms/Abs)",
      "emphasis": "Heavy focus on your priority",
      "exercises": [
        "incline-barbell-press",
        "arnold-press",
        "chest-fly-flat",
        "concentration-curl",
        "overhead-cable-tricep-extension",
        "plank-shoulder-tap"
      ],
      "sets": "3×8–12"
    }
  ]
}